<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mottakin.tabitnow">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".splashClass">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AfterLoginActivity"
            android:label="@string/title_activity_after_login"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".RegistrationActivity"
            android:label="@string/title_activity_registration"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".CreateTournamentActivity"
            android:label="@string/title_activity_create_tournament"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".SearchResultsActivity"
            android:label="Tab it noW - Search and Join!"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ViewArchiveActivity"
            android:label="@string/title_activity_view_archive"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ViewSearchDetails"
            android:label="@string/title_activity_view_search_details"
            android:theme="@style/Theme.AppCompat.Dialog">

        </activity>
    </application>

</manifest>