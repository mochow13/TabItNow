<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mottakin.tabitnow.AdjDebateActivity"
    tools:showIn="@layout/activity_adj_debate">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtRound"
            android:layout_gravity="center_horizontal"
            android:hint="#Round"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textGovTeam"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:hint="Gov" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtGov1"
            android:layout_gravity="center_horizontal"
            android:hint="Speaker #1"
            android:textStyle="bold" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtGov2"
            android:layout_gravity="center_horizontal"
            android:hint="Speaker #2"
            android:textStyle="bold" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtGov3"
            android:layout_gravity="center_horizontal"
            android:hint="Speaker #3"
            android:textStyle="bold" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtGovRebuttal"
            android:layout_gravity="center_horizontal"
            android:hint="Rebuttal"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtOppTeam"
            android:layout_gravity="center_horizontal"
            android:hint="Opp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtOpp1"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:hint="Speaker #1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtOpp2"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:hint="Speaker #2" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtOpp3"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:hint="Speaker #3" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtOppRebuttal"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:hint="Rebuttal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtBest"
            android:layout_gravity="center_horizontal"
            android:hint="Best speaker username" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:id="@+id/btnSubmitMarks"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>
